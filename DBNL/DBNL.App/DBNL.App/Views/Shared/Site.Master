                     <li><%= Html.ActionLink("Khảo sát ý kiến", "Index", "Poll", new { area = "DBNL.App.Admin" }, null)%></li>
                     
                     
                     <li><%= Html.ActionLink("Hổ trợ", "Index", "Supporter", new { area = "DBNL.App.Admin" }, null)%></li>
                      <li><%= Html.ActionLink("Banners", "Index", "Banner", new { area = "DBNL.App.Admin" }, null)%></li>
                     <li><%= Html.ActionLink("Liện Hệ", "Index", "Contact", new { area = "DBNL.App.Admin" }, null)%></li>
                </ul>
            
            </div>
        </div>

        <div id="main">
            
            <% Html.RenderPartial("SideBar"); %>
            
            <div class="Content" id="content">
                <asp:ContentPlaceHolder ID="MainContent" runat="server" />
            </div>
        </div>
        <div id="footer">
            </div>
    </div>
    <asp:ContentPlaceHolder ID="ScriptContent" runat="server" />
</body>
</html>
